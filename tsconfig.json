{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",           // ← Importantísimo para Node.js + Express
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,        // ← Necesario para importar axios, express, etc.
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}